Package: sgmcmc
Type: Package
Title: Stochastic Gradient Markov Chain Monte Carlo
Version: 0.1.0
Authors@R: c(
    person("Jack", "Baker", email = "j.baker1@lancaster.ac.uk", role = c("aut", "cre", "cph")),
    person( "Christopher", "Nemeth", role = c("aut", "cph") ), 
